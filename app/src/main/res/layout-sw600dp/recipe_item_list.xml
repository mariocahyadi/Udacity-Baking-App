<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_item_vertical_margin"
    android:layout_marginBottom="@dimen/list_item_vertical_margin"
    android:layout_marginRight="@dimen/list_item_vertical_margin"
    android:layout_marginLeft="@dimen/list_item_vertical_margin">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_view">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_padding">
            <ImageView
                android:layout_width="@dimen/recipe_thumbnail_width"
                android:layout_height="@dimen/recipe_thumbnail_height"
                android:layout_marginBottom="@dimen/view_horizontal_margin"
                android:id="@+id/image_view"
                android:src="@drawable/no_image_available_md"
                android:contentDescription="@string/desc_recipe_image"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_text_view"
                android:textSize="@dimen/recipe_list_item_fontSize"
                android:contentDescription="@string/desc_recipe_name"
                tools:text="@string/text_placeholder_name"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>